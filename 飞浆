class Student:
def __init__(self, name, grade):
self.name, self.grade = name, grade
#内置sort函数只引用<比较符来判断前后
def __lt__(self, other):
#成绩比other高的，排在他前面
return self.grade > other.grade
#Student的易读字符串表示
def __str__(self):
return "(%s,%d)" % (self.name, self.grade)
#Student的正式字符串表示，我们让它跟易读表示相同
__repr__=__str__
