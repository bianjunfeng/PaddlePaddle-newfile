#位置参数

def desc_person(first_name,last_name,age):
print("First name: %s" % first_name.title())
print("Last name:　%s" % last_name.title())
print("Age: %d" % age)
desc_person('brain','kernighan',30)
desc_person(age=20,first_name='zhang',last_name='hai')
